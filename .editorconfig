# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.{py,html,css,js,json}]
indent_style = space
indent_size = 4

# 2 space indentation for certain file formats
[*.yml]
indent_style = space
indent_size = 2

# Max line length for Python files, following PEP 8
[*.py]
max_line_length = 79

# Trim trailing whitespace
[*]
trim_trailing_whitespace = true